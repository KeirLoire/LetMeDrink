<ModMetaData>
    <packageId>KeirLoire.LetMeDrink</packageId>
    <name>Let Me Drink</name>
    <author>KeirLoire</author>
    <url>https://github.com/KeirLoire/LetMeDrink</url>
    <modIconPath IgnoreIfNoMatchingField="True">About/LetMeDrink_Logo</modIconPath>
    <modVersion>1.0.4</modVersion>
