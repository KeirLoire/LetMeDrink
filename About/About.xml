            <downloadUrl>https://github.com/Dubwise56/Dubs-Bad-Hygiene/releases/latest</downloadUrl>
        </li>
    </modDependencies>
    <loadAfter>
        <li>brrainz.harmony</li>
        <li>Ludeon.RimWorld</li>
        <li>Ludeon.RimWorld.Royalty</li>
